<div class="page-header"><h1>Listing Types</h1></div>

<div class="panel panel-default">
	<div class="panel-heading"><h4>Name</h4></div>

	<div class="panel-body">
		<div class="list-group">
		<% @types.each do |type| %>
				<%= link_to type.name ,new_generator_form_path(:generator=>@generator,:type=>type), class: "list-group-item" %>
		<% end %>
		</div>
	</div>
</div>

<%= link_to 'Back', generators_path, class: "btn btn-default" %>






